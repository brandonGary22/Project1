
<div class="jumbotron">
      <div class="container">
        <h1 class="display-3">Edit Profile</h1>
        <p>Update your profile credentials</P>
        </div>
    </div>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
       <label for="exampleInputEmail1">Email address</label>
       <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <p></p>

      <div class="field">
        <label for="exampleInputPassword1">Current Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password"<%= f.password_field :current_password, autocomplete: "current-password" %>
        <small id="emailHelp" class="form-text text-muted">We need your current password to confirm your changes.</small>
      </div>
    
      <p></p>
      <hr>
      <p></p>

      <div class="field">
       <label for="exampleInputPassword1">New Password</label>
        <% if @minimum_password_length %>
          <em>(<%=@minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"<%= f.password_field :password, autocomplete: "new-password" %>
        
      </div>
    
      <p></p>
  
      <div class="field">
       <label for="exampleInputPassword1">New Password Confirmation</label>
       <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password"<%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <p></p>
    
    
      <div class="actions">
       <button type="submit" class="btn btn-primary">Update</button>
      </div>
    <% end %>
    
    <p></p>
    
    <h3>Cancel my account</h3>
    
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    


    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="#">Brandons Dope App</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
        <a class = "nav-link" <%= link_to 'Home', projects_path %> </a>
        </li>
      </ul>
    

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
     <ul class="navbar-nav mr-auto">
       <li class="nav-item active">
         <% if user_signed_in? %>
           <a class = "nav-link" <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></a> 
           <li>
           <a class = "nav-link" <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></a>
           <li>
         <% else %>
           <a class = "nav-link"<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> </a>
           <li>
           <a class = "nav-link" <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %> </a>
         <% end %>
       </li>
     </ul>
   </div>
 </nav>

